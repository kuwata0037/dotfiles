[user]
	name  = kuwata0037
	email = kuwata0037@gmail.com
[core]
	autocrlf = input
[color]
	ui = auto
[push]
	default = upstream
[pull]
	rebase = true
[merge]
	ff = false
[alias]
	alias = "!git config --get-regexp '^alias\\.' | sed 's/alias\\.\\([^ ]*\\) \\(.*\\)/\\1\\\t => \\2/' | sort"
	ig    = "!gi() { curl -L -s https://www.gitignore.io/api/$@ ;}; gi"
	# add
	aa = add -A
	au = add -u :/
	ap = add -p
	# commit
	c   = commit
	ca  = commit -a
	cm  = commit -m
	cam = commit -am
	cd  = commit --amend
	cad = commit -a --amend
	# branch
	br = branch -vv
	ba = branch -avv
	bn = branch -avv --no-merged
	bd = branch -d
	# checkout
	ch = checkout
	cb = checkout -b
	# stash
	ss = stash save
	sp = stash pop
	sl = stash list
	# diff
	dd = diff
	ds = diff --staged
	dh = diff HEAD
	d1 = diff HEAD~
	d2 = diff HEAD~2
	d3 = diff HEAD~3
	dw = diff --color-words
	# status
	st = status -bs
	# log
	one = log --oneline
	ls  = log --stat --pretty=short
	ll  = log --graph --date-order --pretty=changelog
	la  = log --graph --date-order --pretty=changelog --all
	today = log --graph --since=yesterday --date-order --date=relative --format=format:'%C(yellow)%h %C(green)[%ar] %C(reset)%s %C(red)%d %C(reset)'
	# fetch
	fh = fetch --prune
	# pull
	pl = pull
[pretty]
	changelog=format:%x09%C(yellow)%<(9,trunc)%H %C(green)%>(13)[%ar] %C(auto)%s %C(auto)%d
